<% layout('layouts/boilerplate') -%>
    <div class="row">
        <h1 class="text-center">
            <%= campground.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form">

                <div class="mb-3"> <label for="inp">Title: </label><input class="form-control" type="text"
                        name="campground[title]" id="inp" value="<%=campground.title%>" required>
                </div>

                <div class="mb-3">
                    <label for="loc">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="loc"
                        value="<%=campground.location%>" required>
                </div>

                <div class="mb-3">
                    <label for="image">Image Url: </label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        value="<%=campground.image%>" required>
                </div>

                <div>
                    <div class="mb-3">
                        <label for="price">Price: </label>
                        <input class="form-control" type="number" name="campground[price]" id="price"
                            value="<%= campground.price%>" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required><%= campground.description %>  </textarea>
                </div>
                <button class="btn btn-info">SAVE</button>
            </form>
            <p></p>
            <div><a href="/campgrounds/<%= campground._id%>"><button>Back to Campground</button></a></div>
        </div>
    </div>