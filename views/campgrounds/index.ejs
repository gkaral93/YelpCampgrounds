<% layout('layouts/boilerplate') -%>
    <h1>All campgrounds</h1>
    <div>
        <a href="/campgrounds/new"><button>Add a Campground</button></a>
    </div>

    <% campgrounds.forEach(element=> { %> <%# Access campgrounds array %>

            <%# using BOOTSTRAP CARD %>
                <div class="card" mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= element.image %>" alt="Responsive image" class='img-thumbnail'>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body"></div>
                            <h5 class="card-title"> <%= element.title %> </h5>
                            <p class="card-text"> <%= element.description %> </p>
                            <p class="text-muted"> <%= element.location %> </p>
                            <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">View <%= element.title %> </a>
                    
                        </div>
                    </div>
                </div>

                <% }) %>