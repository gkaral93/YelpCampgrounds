<body>
    <h1>Add new Campground</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="inp">Title: </label>
            <input type="text" name="campground[title]" id="inp">
        </div>
        <div>
            <label for="loc">Location: </label>
            <input type="text" name="campground[location]" id="loc">
        </div>
        <button>Add</button>
    </form>
    <p></p>
    <div> <a href="/campgrounds"><button>To Campgrounds</button> </button></a></div>

</body>

